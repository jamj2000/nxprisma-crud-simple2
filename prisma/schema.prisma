model Articulo {
  id          Int       @id @default(autoincrement())
  nombre      String
  descripcion String?
  precio      Int?      // En centimos, para evitar n√∫meros en coma flotante
  createdAt   DateTime  @default(now()) 
  updatedAt   DateTime  @updatedAt
  proveedores Proveedor[]

  @@map("articulos")
}

model Proveedor {
  id          Int       @id @default(autoincrement())
  nombre      String
  nacional    Boolean?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  articulos   Articulo[]

  @@map("proveedores")
}
